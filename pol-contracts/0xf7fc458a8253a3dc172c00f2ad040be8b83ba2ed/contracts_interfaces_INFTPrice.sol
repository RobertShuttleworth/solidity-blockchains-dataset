pragma solidity 0.8.27;

interface INFTPrice {
	// =============================================================
	//                          ERROR
	// =============================================================

	error PriceError(uint256 price);

	// =============================================================
	//                          EVENT
	// =============================================================

	event SetPrice(uint256 indexed price);

	// =============================================================
	//                          EXTERNAL WRITE
	// =============================================================

	function setNFTPrice(uint256 _price) external;

	// =============================================================
	//                          EXTERNAL VIEW
	// =============================================================

	function basePrice() external view returns (uint256);
}