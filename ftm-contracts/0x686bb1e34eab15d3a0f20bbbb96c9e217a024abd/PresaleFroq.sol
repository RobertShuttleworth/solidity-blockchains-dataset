// File: contracts/presaleFroq.sol


pragma solidity ^0.8.16;






contract PresaleFroq is Ownable, ReentrancyGuard, Pausable {
    // Constants
    uint256 public constant SOFT_CAP = 30000 ether;    // 30,000 FTM
    uint256 public constant HARD_CAP = 90000 ether;    // 90,000 FTM
    uint256 public constant MIN_CONTRIBUTION = 100 ether;   // 100 FTM
    uint256 public constant MAX_CONTRIBUTION = 1000 ether;  // 1,000 FTM

    // State variables
    uint256 public totalRaised;
    bool public isWhitelist = false;
    bool public isPublic = false;

    mapping(address => bool) public whitelist;
    mapping(address => uint256) public contributions;
    
    // Events
    event WhitelistUpdated(address indexed user, bool status);
    event ContributionMade(address indexed contributor, uint256 amount);
    event PresaleStateChanged(bool isWhitelist, bool isPublic);
    event FundsWithdrawn(address indexed to, uint256 amount);

    constructor(address initialOwner) Ownable() {
        require(initialOwner != address(0), "Invalid owner address");
    }

    modifier onlyDuringWhitelist() {
        require(isWhitelist && !isPublic, "Not in whitelist phase");
        _;
    }

    modifier onlyDuringPublic() {
        require(!isWhitelist && isPublic, "Not in public phase");
        _;
    }

    function setWhitelistFlag(bool _isWhitelist) external onlyOwner {
        isWhitelist = _isWhitelist;
    }

    function setPublicFlag(bool _isPublic) external onlyOwner {
        isPublic = _isPublic;
    }

    function updateWhitelist(address[] calldata users, bool status) external onlyOwner {
        require(users.length > 0, "Empty users array");
        for (uint256 i = 0; i < users.length; i++) {
            require(users[i] != address(0), "Invalid address");
            whitelist[users[i]] = status;
            emit WhitelistUpdated(users[i], status);
        }
    }

    function contributeWhitelist() external payable whenNotPaused onlyDuringWhitelist {
        require(whitelist[msg.sender], "Not whitelisted");
        _contribute();
    }

    function contributePublic() external payable whenNotPaused onlyDuringPublic {
        _contribute();
    }

    function _contribute() internal nonReentrant {
        require(msg.value >= MIN_CONTRIBUTION, "Below minimum contribution");
        require(msg.value <= MAX_CONTRIBUTION, "Exceeds maximum contribution");
        require(contributions[msg.sender] + msg.value <= MAX_CONTRIBUTION, "Would exceed max contribution");
        require(totalRaised + msg.value <= HARD_CAP, "Would exceed hard cap");

        uint256 newTotal = totalRaised + msg.value;
        contributions[msg.sender] += msg.value;
        totalRaised = newTotal;

        emit ContributionMade(msg.sender, msg.value);
    }

    function withdrawAllFTM(address to) external onlyOwner {
        require(to != address(0), "Invalid address");
        uint256 amount = address(this).balance;
        require(amount > 0, "No FTM to withdraw");
        
        (bool sent, ) = to.call{value: amount}("");
        require(sent, "Failed to send FTM");
        
        emit FundsWithdrawn(to, amount);
    }

    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    receive() external payable {
        revert("Use contribute functions");
    }

    fallback() external payable {
        revert("Invalid function call");
    }
}